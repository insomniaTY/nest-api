datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:plutta@localhost:5432/vegefoods?schema=public"
}

generator client {
  provider = "prisma-client-js"
}


model Products {
  id Int @default(autoincrement()) @id
  name String
  products_price Int
  id_category Int
  description String
}

model Categories {
  id Int @default(autoincrement()) @id
  name String
  description String
}

model Basket {
  id Int @default(autoincrement()) @id
  quantity Int
  id_product Int
}

model User {
  id Int @default(autoincrement()) @id
  name String
  surname String
  country String
  street_adress String
  city String
  postCode Int
  phone Int
  email String
  discount Int
  delivery Int
  subtotal Int
}